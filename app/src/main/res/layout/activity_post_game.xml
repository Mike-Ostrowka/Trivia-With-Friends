<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/green"
  android:id="@+id/post_game_layout"
  tools:context=".PostGameActivity">
  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_post_game"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:layout_constraintTop_toTopOf="parent"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
      android:id="@+id/victor_banner"
      android:layout_width="match_parent"
      android:layout_marginTop="50dp"
      android:layout_height="wrap_content"
      android:contentDescription="@string/victory_defeat"
      app:srcCompat="@drawable/image_victory" />
    <TextView
      android:id="@+id/player_one_score"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="32dp"
      android:layout_marginLeft="32dp"
      android:textSize="18sp"
      android:layout_marginRight="32dp"
      android:gravity="center"
      android:text="" />
    <TextView
      android:id="@+id/player_two_score"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="32dp"
      android:layout_marginLeft="32dp"
      android:textSize="18sp"
      android:layout_marginRight="32dp"
      android:gravity="center"
      android:text="" />
    <Button
      android:id="@+id/btn_play_again"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:layout_marginStart="64dp"
      android:layout_marginEnd="64dp"
      android:layout_marginLeft="64dp"
      android:layout_marginRight="64dp"
      android:background="@drawable/round_bg"
      android:drawableLeft="@drawable/ic_baseline_play_24"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text="@string/play_again"
      android:textColor="#FFFFFF"
      android:textSize="18sp"
      android:drawableStart="@drawable/ic_baseline_play_24"
      android:paddingStart="10dp" />
    <Button
      android:id="@+id/btn_to_welcome"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginStart="64dp"
      android:layout_marginEnd="64dp"
      android:layout_marginLeft="64dp"
      android:layout_marginRight="64dp"
      android:background="@drawable/round_bg"
      android:drawableLeft="@drawable/ic_baseline_menu_white"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text="@string/back_to_main"
      android:textColor="#FFFFFF"
      android:textSize="18sp"
      android:drawableStart="@drawable/ic_baseline_menu_white"
      android:paddingStart="10dp" />
  </LinearLayout>
</android.support.constraint.ConstraintLayout>